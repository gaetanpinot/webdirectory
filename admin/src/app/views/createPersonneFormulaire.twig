{% extends 'squelette.twig' %}
    {% block titre %}Création personne{% endblock %}
{% block main %}
    <h1 id="titrePage">Créer personne</h1>
    <form class="formulaireCreatePersonne" method="post">

        <label for="champNom">Nom</label>
        <input type="text" id="champNom"
               name="nom" required>

        <label for="champPrenom">Prenom</label>
        <input type="text" id="champPrenom"
               name="prenom" required>

        <label for="champNumBureau">Numero de bureau</label>
        <input type="number" id="champNumBureau"
               name="num_bureau" required>

        <label for="champMail">Email</label>
        <input type="email" id="champMail"
               name="mail" required>


        <label for="champUrl">Url Image</label>
        <input type="url" id="champUrl"
               name="url_img">

        <label for="selectService">Service</label>
        <select name="id_service" id="selectService">
            {% for s in services %}
                <option value="{{ s.id }}">{{ s.libelle }}</option>

            {% endfor %}
        </select>

        <input type="hidden" name="token" value="{{ token }}">

        <input type="submit" id="submit" value="Submit">

    </form>
{% endblock %}